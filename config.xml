<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.bible.scripture" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Wordless Book</name>
    <description>
       Uses the wordless book method to share the Gospel of Jesus.
    </description>
    <author email="jbreezy248@gmail.com" href="http://cordova.io">
        Joshua BAxter
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
         <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="res/icon/android/Icon-36-ldpi.png" density="ldpi" />
        <icon src="res/icon/android/Icon-48-mdpi.png" density="mdpi" />
        <icon src="res/icon/android/Icon-72-hdpi.png" density="hdpi" />
        <icon src="res/icon/android/Icon-96-xhdpi.png" density="xhdpi" />
        <icon src="res/icon/android/Icon-144-xxhdpi.png" density="xxhdpi" />
        <icon src="res/icon/android/Icon-192-xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="res/icon/ios/Icon-100.png" width="100" height="100" />
        <icon src="res/icon/ios/Icon-1024.png" width="1024" height="1024" />
        <icon src="res/icon/ios/Icon-114" width="114" height="114" />
        <icon src="res/icon/ios/Icon-120.png" width="120" height="120" />
        <icon src="res/icon/ios/Icon-128.png" width="128" height="128" />
        <icon src="res/icon/ios/Icon-144.png" width="144" height="144" />
        <icon src="res/icon/ios/Icon-152.png" width="152" height="152" />
        <icon src="res/icon/ios/Icon-16.png" width="16" height="16" />
        <icon src="res/icon/ios/Icon-167.png" width="167" height="167" />
        <icon src="res/icon/ios/Icon-172.png" width="172" height="172" />
        <icon src="res/icon/ios/Icon-180.png" width="180" height="180" />
        <icon src="res/icon/ios/Icon-196.png" width="196" height="196" />
        <icon src="res/icon/ios/Icon-20.png" width="20" height="20" />
        <icon src="res/icon/ios/Icon-256.png" width="256" height="256" />
        <icon src="res/icon/ios/Icon-29.png" width="29" height="29" />
        <icon src="res/icon/ios/Icon-32.png" width="32" height="32" />
        <icon src="res/icon/ios/Icon-40.png" width="40" height="40" />
        <icon src="res/icon/ios/Icon-48.png" width="48" height="48" />
        <icon src="res/icon/ios/Icon-50.png" width="50" height="50" />
        <icon src="res/icon/ios/Icon-512.png" width="512" height="512" />
        <icon src="res/icon/ios/Icon-55.png" width="55" height="55" />
        <icon src="res/icon/ios/Icon-57.png" width="57" height="57" />
        <icon src="res/icon/ios/Icon-58.png" width="58" height="58" />
        <icon src="res/icon/ios/Icon-60.png" width="60" height="60" />
        <icon src="res/icon/ios/Icon-64.png" width="64" height="64" />
        <icon src="res/icon/ios/Icon-72.png" width="72" height="72" />

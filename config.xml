<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.bible.scripture" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WordlessBookApp</name>
    <description>
       Uses the wordless book method to share the Gospel of Jesus.
    </description>
    <author email="jbreezy248@gmail.com" href="http://cordova.io">
        Joshua Baxter
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
         <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="res/icon/android/Icon-36-ldpi.png" density="ldpi" />
        <icon src="res/icon/android/Icon-48-mdpi.png" density="mdpi" />
        <icon src="res/icon/android/Icon-72-hdpi.png" density="hdpi" />
        <icon src="res/icon/android/Icon-96-xhdpi.png" density="xhdpi" />
        <icon src="res/icon/android/Icon-144-xxhdpi.png" density="xxhdpi" />
        <icon src="res/icon/android/Icon-192-xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />


        <!--The purpose of this is to cause Cordova to use WKWebView instead of UIWebView.
        UIWebView is deprecated, and Apple will reject the app if it is used. 
        Need to run the following command in terminal to install the cordova-plugin-wkwebview-engine:
        cordova plugin add cordova-plugin-wkwebview-engine. 
        Or, can use cordova ios version 5.1.1 by running the following commands:
        1. cordova platform remove ios
        2. cordova platform add ios@5.1.1
        See https://cordova.apache.org/howto/2020/03/18/wkwebviewonly.html
        -->

        <preference name="WKWebViewOnly" value="true" />
        <feature name="CDVWKWebViewEngine">
            <param name="ios-package" value="CDVWKWebViewEngine" />
        </feature>
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />

        <!--Icons: -->

        <!--This icon is used by the App store-->
        <icon src="res/icon/ios/Icon-1024.png" width="1024" height="1024" />
        <icon src="res/icon/ios/Icon-100.png" width="100" height="100" />
        <icon src="res/icon/ios/Icon-114.png" width="114" height="114" />
        <icon src="res/icon/ios/Icon-120.png" width="120" height="120" />
        <icon src="res/icon/ios/Icon-128.png" width="128" height="128" />
